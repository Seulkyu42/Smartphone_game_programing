<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.StatsActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/background_high"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-65dp">
    </ImageView>
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/background_dark"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-65dp">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:weightSum="2"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15">
            <TextView
                android:id="@+id/playergold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:fontFamily="@font/dungguenmo"
                android:textSize="50sp"
                android:textColor="@color/white"
                android:text="Coin : 0">
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        1번 아이템      -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="0.43">

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onStat1Clicked"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-300 Coin"
                android:textSize="50sp"
                android:gravity="right|bottom"
                android:fontFamily="@font/dungguenmo"
                >
            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        2번 아이템      -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="0.43">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onStat1Clicked"
                android:layout_weight="0.5" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-100 Coin"
                android:textSize="50sp"
                android:gravity="right|bottom"
                android:fontFamily="@font/dungguenmo"
                >
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout
>

        <!--        3번 아이템      -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="0.43">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onStat1Clicked"
                android:layout_weight="0.5" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-100 Coin"
                android:textSize="50sp"
                android:gravity="right|bottom"
                android:fontFamily="@font/dungguenmo"
                >
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        4번 아이템      -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="0.43">

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="onStat1Clicked"
                android:layout_weight="0.5" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-100 Coin"
                android:textSize="50sp"
                android:gravity="right|bottom"
                android:fontFamily="@font/dungguenmo"
                >
            </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>